@model List<HorseBase.Models.ViewModels.User.UserViewModel>

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>
<form method="post" action="@Url.Action("UpdateStatus", "Users")">
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Is Active</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.MiddleName</td>
                    <td>@user.LastName</td>
                    <td>
                        <input type="checkbox" name="isActive_@user.Id" @if (user.IsActive)
                        {
                            <text>checked</text>
                        } />
                    </td>
                    <td>@string.Join(", ", user.Roles)</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HorseBase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HorseBase.styles.css" asp-append-version="true" />
    <style>
        /* Add some CSS for the container */
        .horse-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden; /* Prevents horse from moving out of the container */
            z-index: 1;
            background-image: url(/lib/images/map.png); /* Add the path to your background image */
            background-size: cover; /* Makes sure the image covers the entire container */
            background-position: center; /* Centers the background image */
            background-repeat: no-repeat; /* Prevents the image from repeating */
        }

        .horse {
            position: absolute;
        }

        .tooltip {
            position: absolute;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 10px;
            border-radius: 5px;
            display: none; /* Hidden by default */
            opacity: 1;
            z-index: 10;
        }

        .container {
            position: absolute;
            z-index: 2;
        }

        /* Styling for login partial overlay */
        .login-overlay {
            width: 200px;
            height: 100px;
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 100; /* Ensure it appears on top */
            background: rgba(255, 255, 255, 0.9); /* Slightly transparent background */
            padding: 10px;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around; /* Space between buttons */
        }


    </style>
</head>
<body>

    <!-- Login Partial overlay positioned in the upper-right corner -->
    <div class="login-overlay">
        @await Html.PartialAsync("_loginPartial")
    </div>

    <div class="horse-container">
        @RenderBody()
    </div>

    <script src="/js/script.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

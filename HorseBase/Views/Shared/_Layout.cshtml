<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HorseBase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HorseBase.styles.css" asp-append-version="true" />
    <style>
        /* Add some CSS for the container */
        .horse-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden; /* Prevents horse from moving out of the container */
            z-index: 1;
            background-image: url(/lib/images/map.png); /* Add the path to your background image */
            background-size: cover; /* Makes sure the image covers the entire container */
            background-position: center; /* Centers the background image */
            background-repeat: no-repeat; /* Prevents the image from repeating */
        }

        .horse {
            position: absolute;
        }

        .tooltip {
            position: absolute;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 10px;
            border-radius: 5px;
            display: none; /* Hidden by default */
            opacity: 1;
            z-index: 10;
        }
        .container{
            position: absolute;
            z-index: 2;
        }

    </style>
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="horse-container">
    </div>
    <script src="/js/script.js"></script>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HorseBase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
